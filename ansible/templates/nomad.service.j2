[Unit]
Description=nomad agent
Requisite=network-online.target sys-subsystem-net-devices-eth1.device consul.service
Wants=network-online.target
After=network-online.target sys-subsystem-net-devices-eth1.device consul.service

[Service]
EnvironmentFile=-/etc/sysconfig/nomad
Environment=GOMAXPROCS=2
Restart=on-failure
ExecStart=/usr/local/bin/nomad agent -dev-connect -config=/etc/nomad.d $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target